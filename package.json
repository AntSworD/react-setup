{
  "name": "react-setup",
  "version": "1.4.1",
  "description": "A lightweight React setup: Babel, React, React Router, React Boostrap, React-intl, Mocha, Webpack HMR, PostCSS, ESLint",
  "private": true,
  "author": "Duc Ng (https://github.com/ngduc)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngduc/react-setup/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ngduc/react-setup.git"
  },
  "homepage": "https://github.com/ngduc/react-setup",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --require ./test/test-init --compilers js:babel-core/register ./src/**/*.spec.js",
    "test:watch": "npm test -- -w",
    "test:cov": "NODE_ENV=test babel-node $(npm bin)/isparta cover --verbose --report text --report html --dir ./test/coverage $(npm bin)/_mocha -- --require ./test/test-init src/**/*.spec.js",
    "start": "babel-node devServer",
    "build:msg": "babel --plugins react-intl src/app/**/messages.js && babel-node tools/scripts/translate.js",
    "build:start": "NODE_ENV=production babel-node prodServer",
    "build": "rimraf dist && NODE_ENV=production webpack --config webpack.config.prod.js --progress --profile --colors && npm run build:msg",
    "lint": "eslint .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "c": "git-cz"
  },
  "keywords": [
    "react",
    "component",
    "boilerplate"
  ],
  "dependencies": {
    "babel-plugin-react-intl": "^2.0.0",
    "fastclick": "1.0.6",
    "history": "^2.0.0-rc1",
    "normalize.css": "3.0.3",
    "react": "0.14.6",
    "react-dom": "0.14.6",
    "react-intl": "^2.0.0-beta-2",
    "react-router": "^2.0.0-rc4"
  },
  "devDependencies": {
    "autobind-decorator": "1.3.2",
    "autoprefixer": "6.2.3",
    "babel-cli": "6.4.0",
    "babel-core": "6.4.0",
    "babel-eslint": "5.0.0-beta6",
    "babel-loader": "6.2.1",
    "babel-plugin-react-transform": "2.0.0",
    "babel-polyfill": "6.3.14",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "babel-preset-stage-2": "6.3.13",
    "chai": "3.4.1",
    "commitizen": "2.4.6",
    "conventional-changelog": "0.5.3",
    "copy-webpack-plugin": "^0.3.3",
    "css-loader": "0.23.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "3.14.0",
    "express": "4.13.3",
    "extract-text-webpack-plugin": "1.0.1",
    "glob": "^6.0.3",
    "html-webpack-plugin": "1.7.0",
    "intl-messageformat-parser": "^1.2.0",
    "isparta": "4.0.0",
    "jsdom": "7.2.2",
    "json-loader": "0.5.4",
    "lodash": "3.10.1",
    "mkdirp": "^0.5.1",
    "mocha": "2.3.4",
    "mocha-jsdom": "1.0.0",
    "postcss-import": "7.1.3",
    "postcss-loader": "0.8.0",
    "postcss-mixins": "1.0.0",
    "postcss-modules-values": "1.1.1",
    "postcss-nested": "1.0.0",
    "postcss-simple-vars": "1.2.0",
    "px-test-utils": "1.0.2",
    "react-addons-test-utils": "0.14.6",
    "react-bootstrap": "0.28.2",
    "react-transform-catch-errors": "1.0.1",
    "react-transform-hmr": "1.0.1",
    "redbox-react": "1.2.0",
    "rimraf": "2.5.0",
    "serialize-javascript": "^1.1.2",
    "sinon": "1.17.2",
    "sinon-chai": "2.8.0",
    "stats-webpack-plugin": "0.2.2",
    "style-loader": "0.13.0",
    "webpack": "1.12.10",
    "webpack-dev-middleware": "1.4.0",
    "webpack-hot-middleware": "2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/rb-conventional-changelog"
    }
  }
}
